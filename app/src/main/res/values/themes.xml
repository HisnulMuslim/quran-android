<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Quran" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent_color</item>
        <item name="spinnerStyle">?attr/actionDropDownStyle</item>
        <item name="spinnerDropDownItemStyle">@style/SherlockDropDownItem</item>
        <item name="spinnerItemStyle">@style/SherlockSpinnerItem</item>
    </style>

    <style name="QuranToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="spinnerStyle">?attr/actionDropDownStyle</item>
        <item name="spinnerDropDownItemStyle">@style/SherlockDropDownItem</item>
        <item name="spinnerItemStyle">@style/SherlockSpinnerItem</item>
    </style>

    <style name="QuranToolBar.Overlay">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="QuranDialog" parent="Theme.AppCompat.Dialog" >
        <item name="android:background">@color/header_background</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColor">@color/header_text_color</item>
    </style>

    <!--KQACR2 start-->
    <style name="QuranToolBarSplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/dark_background</item>
    </style>


    <style name="QuranToolBarOverlayPopUp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/page_background</item>
        <item name="android:windowBackground">@color/page_background</item>
    </style>
    <!--KQACR2 end-->
</resources>
