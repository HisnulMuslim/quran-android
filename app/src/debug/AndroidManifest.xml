<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
  android:installLocation="auto">

  <application
      android:label="${app_debug_label}"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:name=".DebugApplication"
      android:theme="@style/Quran"
      tools:replace="android:icon,android:roundIcon,android:label,android:name">

    <activity android:name=".QuranDataActivity"
        android:theme="@style/QuranToolBarSplashScreen"/>

    <meta-data
        android:name="firebase_crashlytics_collection_enabled"
        android:value="false" />
  </application>
</manifest>
